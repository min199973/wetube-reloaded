doctype html 
html(lang="ko")
    head 
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
        title #{pageTitle} | Wetube
    body 
        header 
            if fakeUser.loggedIn
                small Hello #{fakeUser.username}
            nav
                ul
                    if fakeUser.loggedIn
                        li 
                            a(href="/logout") Log out
                    else 
                        li 
                            a(href="/login") Login
            h1=pageTitle
        main
            block content 
    include partials/footer.pug